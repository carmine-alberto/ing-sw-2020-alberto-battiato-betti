<gods>

    <god>
        <name>Apollo</name>
        <movePredicates>
            <and>and(
                <movePredicate>
                    <name>IsDeltaHeightLessThanPredicate</name>
                    <args>arg(
                        <arg>1</arg>
                    )</args>
                </movePredicate>
                <or>or(
                    <movePredicate>ContainsOpponentWorkerPredicate</movePredicate>
                    <movePredicate>IsCellFreePredicate</movePredicate>
                )</or>
            )</and>
        </movePredicates>
        <moveStrategy>MoveWithSwap</moveStrategy>
    </god>

    <god>
        <name>Artemis</name>
        <phases>
            <phase>ChooseWorkerPhase</phase>
            <phase>ChooseActionPhase</phase>
            <phase>MovePhase</phase>
            <phase>ChooseActionPhase</phase>
            <phases>choose1(
                <phase>MovePhase</phase>
                <phase>BuildPhase</phase>
                <phase>ChooseBlockPhase</phase>
            )</phases>
            <phases>choose2(
                <phase>BuildPhase</phase>
                <phase>ChooseBlockPhase</phase>
            )</phases>
        </phases>
        <movePredicates>
            <movePredicate>NotInOldMovePositionPredicate</movePredicate>
        </movePredicates>
    </god>

    <god>
        <name>Athena</name>
        <moveStrategy>
            <name>MoveAndSet</name>
            <args>arg(
                <arg>CantMoveUpPredicate</arg>
            )</args>
        </moveStrategy>
    </god>

    <god>
        <name>Atlas</name>
        <constructiblePredicates>
            <name>BlockPredicate</name>
            <args>arg(
                <arg>0</arg>
            )</args>
        </constructiblePredicates>
    </god>

    <god>
        <name>Demetra</name>
        <phases>
            <phase>ChooseWorkerPhase</phase>
            <phase>ChooseActionPhase</phase>
            <phase>MovePhase</phase>
            <phase>BuildPhase</phase>
            <phase>ChooseBlockPhase</phase>
            <phase>ChooseActionPhase</phase>
            <phases>choose1(
                <phase>BuildPhase</phase>
                <phase>ChooseBlockPhase</phase>
            )</phases>
        </phases>
        <buildPredicates>
            <buildPredicate>
                <name>NotInOldBuildPositionPredicate</name>
            </buildPredicate>
        </buildPredicates>
    </god>

    <god>
        <name>Ephestus</name>
        <phases>
            <phase>ChooseWorkerPhase</phase>
            <phase>ChooseActionPhase</phase>
            <phase>MovePhase</phase>
            <phase>BuildPhase</phase>
            <phase>ChooseBlockPhase</phase>
            <phase>ChooseActionPhase</phase>
            <phases>choose1(
                <phase>BuildPhase</phase>
                <phase>ChooseBlockPhase</phase>
            )</phases>
        </phases>
        <buildPredicates>
            <not>not(
                <buildPredicate>
                    <name>NotInOldBuildPositionPredicate</name>
                </buildPredicate>
            )</not>
        </buildPredicates>
    </god>

    <god>
        <name>Minotaur</name>
        <movePredicates>
            <and>and(
                <movePredicate>
                    <name>IsDeltaHeightLessThanPredicate</name>
                    <args>arg(
                        <arg>1</arg>
                    )</args>
                </movePredicate>
                <or>or(
                    <and>and(
                        <movePredicate>ContainsOpponentWorkerPredicate</movePredicate>
                        <movePredicate>CanMoveBackPredicate</movePredicate>
                    )</and>
                    <movePredicate>IsCellFreePredicate</movePredicate>
                )</or>
            )</and>
        </movePredicates>
        <moveStrategy>MoveAndShiftBack</moveStrategy>
    </god>

    <god>
        <name>Pan</name>
        <winConditions>
            <or>or(
                <winCondition>
                    <name>HasMovedDownPredicate</name>
                    <args>arg(
                        <arg>2</arg>
                    )</args>
                </winCondition>
            )</or>
        </winConditions>
    </god>

    <god>
        <name>Prometheus</name>
        <phases>
            <phase>ChooseWorkerPhase</phase>
            <phase>ChooseActionPhase</phase>
            <phases>choose1(
                <phase>BuildPhase</phase>
                <phase>ChooseBlockPhase</phase>
                <phase>
                    <name>MovePhase</name>
                    <movePredicates>
                        <movePredicate>
                            <name>IsDeltaHeightLessThanPredicate</name>
                            <args>
                                <arg>0</arg>
                            </args>
                        </movePredicate>
                    </movePredicates>
                </phase>
                <phase>BuildPhase</phase>
                <phase>ChooseBlockPhase</phase>
            )</phases>
            <phases>choose2(
                <phase>MovePhase</phase>
                <phase>BuildPhase</phase>
                <phase>ChooseBlockPhase</phase>
            )</phases>
        </phases>
    </god>

    <god>
        <name>Charon</name>
        <phases>
            <phase>ChooseWorkerPhase</phase>
            <phase>ChooseActionPhase</phase>
            <phases>choose1(
                <!-- <phase>DISPLACE</phase> -->
                <phase>ChooseActionPhase</phase>
                <phase>MovePhase</phase>
                <phase>BuildPhase</phase>
                <phase>ChooseBlockPhase</phase>
            )</phases>
            <phases>choose2(
                <phase>MovePhase</phase>
                <phase>BuildPhase</phase>
                <phase>ChooseBlockPhase</phase>
            )</phases>
        </phases>
    </god>

    <god>
        <name>Chronus</name>
        <winConditions>
            <or>or(
                <winCondition>
                    <name>CompleteTowersPredicate</name>
                    <args>arg(
                        <arg>5</arg>
                    )</args>
                </winCondition>
            )</or>
        </winConditions>
    </god>

    <god>
        <name>Hera</name>
        <winConditions>
            <and>and(
                <winCondition>
                    <name>NotOnPerimeterPredicate</name>
                    <application>on (opponents)</application>    <!-- todo va aggiunto anche a tutti gli altri?-->
                </winCondition>
            )</and>
        </winConditions>
    </god>

    <god>
        <name>Hestia</name>
        <phases>
            <phase>ChooseWorkerPhase</phase>
            <phase>ChooseActionPhase</phase>
            <phase>MovePhase</phase>
            <phase>BuildPhase</phase>
            <phase>ChooseBlockPhase</phase>
            <phase>ChooseActionPhase</phase>
            <phases>choose1(
                <phase>BuildPhase</phase>
                <buildPredicates>
                    <and>
                        <buildPredicate>
                            <name>NotOnPerimeterPredicate</name>
                        </buildPredicate>
                    </and>
                </buildPredicates>
                <phase>ChooseBlockPhase</phase>
            )</phases>
        </phases>
    </god>

    <god>
        <name>Zeus</name>
        <buildPredicates>
            <or>or(
                <buildPredicate>
                    <name>CanBuildUnderItselfPredicate</name>
                </buildPredicate>
            )</or>
        </buildPredicates>
    </god>
    
</gods>